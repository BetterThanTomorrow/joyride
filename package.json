{
  "name": "joyride",
  "displayName": "Joyride: Hack your editor",
  "description": "Makes VS Code scriptable using nbb (interpreted Clojure for node-js)",
  "icon": "assets/joyride.png",
  "version": "0.0.1",
  "publisher": "betterthantomorrow",
  "author": {
    "name": "Better Than Tomorrow",
    "email": "pez@pezius.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PEZ/joyride.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "nbb",
    "vscode",
    "clojure",
    "repl",
    "automation"
  ],
  "galleryBanner": {
    "color": "#344D81",
    "theme": "dark"
  },
  "badges": [
    {
      "url": "https://img.shields.io/badge/clojurians-joyride-blue.svg?logo=slack",
      "href": "https://clojurians.slack.com/messages/vscode/",
      "description": "Let's talk in the #joyride channel on the Clojurians Slack"
    }
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Joyride",
      "properties": {
        "joyride.scriptsPath": {
          "type": "string",
          "default": ".joyride/scriptz",
          "markdownDescription": "Where Joyride should look for scripts"
        }
      }
    },
    "commands": [
      {
        "command": "joyride.runScript",
        "title": "Run Script",
        "category": "Joyride"
      },
      {
        "command": "joyride.runWorkspaceScript",
        "title": "Run Workspace Script",
        "category": "Joyride"
      },
      {
        "command": "joyride.loadCurrentFile",
        "title": "Load Current File",
        "category": "Joyride"
      },
      {
        "command": "joyride.evaluateSelection",
        "title": "Evaluate Selection",
        "category": "Joyride"
      }
    ],
    "keybindings": [
      {
        "command": "joyride.runScript",
        "key": "ctrl+shift+space space"
      }
    ]
  },
  "scripts": {
    "clean": "rimraf .shadow-cljs/ out/",
    "watch": "npx shadow-cljs -d cider/cider-nrepl:0.27.4 watch :extension",
    "prewatch": "npm run clean",
    "compile": "npx shadow-cljs compile :extension",
    "release": "npx shadow-cljs release :extension",
    "vscode:prepublish": "npm run clean && npm run release"
  },
  "dependencies": {
    "vsce": "^2.7.0"
  },
  "devDependencies": {
    "rimraf": "^3.0.2",
    "shadow-cljs": "^2.18.0"
  }
}
